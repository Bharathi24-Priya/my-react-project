pipeline {
  agent any
  tools {
    nodejs "nodejs-16.13.0"
    }

  stages {
    stage('Build') {
      steps {
        sh 'npm install'
        sh 'npm run build'
      }
    }

    stage('Test') {
      steps {
        sh 'npm run test'
      }
    }

    stage('Deploy') {
      steps {
        sh 'npm install -g serve'
        sh 'serve -s build'
      }
    }
  }
}
